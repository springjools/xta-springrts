#define TA			// This is a TA script

#include "sfxtype.h"
#include "exptype.h"

piece  base, sphereOn, sphereOff, glow;

static-var  mmState;

#define OPERATING 1024

Go()
{
	set OPERATING to 1;
	show sphereOn;
	hide sphereOff;
	//move sphere to y-axis [1.600000] speed [1.600000];
	sleep 1000;
	mmState = 1;
	set ACTIVATION to 1;
}

Stop()
{	
	set OPERATING to 0;
	mmState = 0;
	set ACTIVATION to 0;
	hide sphereOn;
	show sphereOff;
	//move sphere to y-axis [0.000000] speed [1.600000];
}

Activate()
{
	call-script Go();
}

Deactivate()
{
	call-script Stop();
}

ImAMetalMaker()
{
	mmState = -1;
	while( TRUE )
	{
		if ((get OPERATING) == 1)
		{
			if (mmState != 1) {
				call-script Go();
			}
		}
		else
		{
			if (mmState != 0) {
				call-script Stop();
			}
		}
		sleep 1000;
	}
}

Standby()
{
	while( TRUE )
	{
		if (mmState == 1)
		{
		emit-sfx 1025 from glow;
		}
		sleep 450;
	}
}

SmokeUnit(healthpercent, sleeptime, smoketype)
{
	while( get BUILD_PERCENT_LEFT )
	{
		sleep 500;
	}
	start-script ImAMetalMaker();
	start-script Standby();
	while( TRUE )
	{
		healthpercent = get HEALTH;
		if( healthpercent < 66 )
		{
			smoketype = 258;
			if( Rand( 1, 66 ) < healthpercent )
			{
				smoketype = 257;
			}
			emit-sfx smoketype from base;
		}
		sleeptime = healthpercent * 50;
		if( sleeptime < 200 )
		{
			sleeptime = 200;
		}
		sleep sleeptime;
	}
}

