#define TA			// This is a TA script

#include "sfxtype.h"
#include "exptype.h"

piece  flare1, flare2, base, bombdrop, gun, wing1, wing2, thrust;

static-var  Static_Var_1, gun_2, statechg_DesiredState, statechg_StateChanging, Static_Var_5;

// Signal definitions
#define SIG_AIM_2			2


activatescr()
{
	move wing1 to x-axis [0.000000] now;
	move wing1 to x-axis [16.875000] speed [16.908798];
	move wing1 to z-axis [0.000000] now;
	move wing1 to z-axis [-4.375000] speed [4.383743];
	move wing2 to x-axis [0.000000] now;
	move wing2 to x-axis [-17.375000] speed [17.409805];
	//Static_Var_5 = 1;
	move wing2 to z-axis [0.000000] now;
	move wing2 to z-axis [-4.625000] speed [4.634262];
	sleep 998;
}

